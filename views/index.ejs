<%- include("partials/header.ejs") %>

<div class="container">

    <div class="pricing-header p-3 pb-md-4 mx-auto text-center">
        <h1 class="display-4 fw-normal text-body-emphasis">Programming Quotes</h1>
        <p class="fs-5 text-body-secondary m-5">
            Welcome to our Programming Quotes Website! Use the following categories to generate random 
            programming quotes using the programming quotes API.
        </p>
    </div>

    <div class="row row-cols-1 row-cols-md-3 mb-3 text-center">
        <div class="col">
          <div class="card mb-4 rounded-3 shadow-sm">
            
              <div class="card-header py-3">
                <h3 class="my-0 fw-normal">Random Quote</h3>
              </div>

              <div class="card-body">
              <p>Click the button to receive a fresh dose of inspiration!  Our website will surprise you with a random programming quote each time you click.</p>

              <form action="/random" method="post">
                <button type="submit" class="w-50 btn btn-lg btn-outline-secondary">Generate</button>
              </form>

            </div>

          </div>
        </div>
        
        <div class="col">
            <div class="card mb-4 rounded-3 shadow-sm">

              <div class="card-header py-3">
                <h3 class="my-0 fw-normal">Author Name</h3>
              </div>
              
              <div class="card-body">
                <p>Get one random quote using the Author's name.</p>

                <form action="/authorName" method="post">
                    <input type="text" name="authorName" class="form-control text-bg mb-3" placeholder="Name of author">
                    <button type="submit" class="w-50 btn btn-lg btn-outline-secondary">Generate</button>
                </form>

              </div>
  
            </div>
        </div>

        <div class="col">
            <div class="card mb-4 rounded-3 shadow-sm">

              <div class="card-header py-3">
                <h3 class="my-0 fw-normal">Bulk</h3>
              </div>
              
              <div class="card-body">
                <p>Not satisfied with just one quote? 
                    <br> Want more? 
                    <br> Click the button below to receive 10 random quotes!
                </p>

                <form action="/bulk" method="post">
                    <button type="submit" class="w-50 btn btn-lg btn-outline-secondary">Generate</button>
                </form>

              </div>
  
            </div>
        </div>

    </div>

</div>

<%- include("partials/footer.ejs") %>